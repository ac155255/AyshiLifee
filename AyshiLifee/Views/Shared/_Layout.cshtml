<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ayshi's Life</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;600&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Caveat&display=swap" rel="stylesheet">

    


    <style>
        body {
            font-family: 'Raleway', sans-serif;
            background-color: #f4f0e8;
            color: #333;
            margin: 0;
        }

        .navbar {
            background-color: #e5ddd1;
            padding: 1rem 2rem;
        }

        .navbar-brand {
            font-weight: bold;
            color: #333 !important;
        }

        .nav-link {
            color: #333 !important;
            margin-right: 15px;
            font-weight: 500;
        }

        .container {
            max-width: 960px;
            margin: auto;
            padding: 60px 20px;
        }

        footer {
            font-size: 0.9rem;
            color: #999;
            border-top: 1px solid #ddd;
            padding: 1rem;
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ayshi's Life</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="AboutMe" asp-action="Index">About Me</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Skill" asp-action="Index">Skill</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Portfolio" asp-action="Index">Portfolio</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Achievement" asp-action="Index">Achievement</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Contact" asp-action="Index">Contact</a></li>
                    </ul>
                </div>
            </div>
         

        </nav>
    </header>
    <div class="container">
        <div style="text-align:center; margin-top: 20px;">
            <img src="~/images/proflie.png" alt="Ayshi's Profile" style="width:150px; border-radius: 50%; box-shadow: 0px 0px 10px rgba(0,0,0,0.1);" />
        </div>
       



        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer>
        &copy; 2025 - Ayshi's Life
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
